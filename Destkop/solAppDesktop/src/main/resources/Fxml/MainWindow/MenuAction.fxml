<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox id="topMenu" prefHeight="60.0" prefWidth="1000.0" stylesheets="@../../Styles/TopMenu.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sol.app.quinones.solappquinones.Controllers.TopMenuController">
   <children>
      <Button fx:id="btnAdd" onAction="#add">
         <graphic>
            <FontAwesomeIconView glyphName="PLUS" size="20" />
         </graphic>
         <text>Nou</text>
      </Button>
      <Button fx:id="btnEdit">
         <graphic>
            <FontAwesomeIconView glyphName="EDIT" size="20" />
         </graphic>
         <text>Editar</text>
      </Button>
      <Button fx:id="btnDelete">
         <graphic>
            <FontAwesomeIconView glyphName="TRASH" size="20" />
         </graphic>
         <text>Eliminar</text>
      </Button>
      <TextField fx:id="txtSearch" promptText="Buscar..." />
      <Button fx:id="btnSearch">
         <graphic>
            <FontAwesomeIconView glyphName="SEARCH" size="20" />
         </graphic>
      </Button>
   </children>
</HBox>
